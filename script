function calcular_1() {
    var a = valor_a.value;
    var b = valor_b.value;
    var x = valor_x.value;
    var calculo = -b/a;

    if(a == 0){
        alert("a dev ser diferente de zer0");      
    }
    else{
        if( x == calculo){
            alert("YESSS");
        }
    else{
        alert("errado :c");
    }
    }
}


function inclui_nome() {

    var nome_variavel = prompt ("qual seu nome?");
    
    if(nome_variavel){
        document.getElementById("marcacao_nome").innerHTML = nome_variavel;
    }
    else{
        alert("npme nao atribuido, preencha o nome.");
        inclui_nome();
    }
}
